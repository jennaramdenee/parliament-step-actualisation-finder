.section--primary#content{ tabindex: "0" }
  .container
    %h1
      %span= @step_name

    %ul.list--block
      - @business_items.each do |business_item|
        %li
          - work_package_id, work_packageable_thing_name = StepActualisationHelper.actualised_data(@step_id, business_item)
          - if work_package_id && work_packageable_thing_name
            = link_to("#{work_packageable_thing_name}", "http://beta.parliament.uk/work-packages/#{work_package_id}")
